{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationDir": "./types",
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["es2022", "dom", "es2020.intl"],
      "skipLibCheck": true,
      "noEmitOnError": true
    },
    "include": [
      "src/**/*.js"
    ]
  }